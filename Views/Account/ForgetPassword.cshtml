@model File_Sharing.ViewModels.ForgetPasswordViewModel

@{
    ViewData["Title"] = "Forget Password";
}
<br />


<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area">
                 
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>Forget Password</h2>
                            </div>
                        </div>
                    </div>

                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form method="post" class="mu-contact-form" asp-action="ForgetPassword" >
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" id="Email" required>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <button type="submit" class="mu-send-msg-btn"><span>Submit</span></button>
                                        <hr>
                
                                    </form>
                                </div>
                                <hr>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
