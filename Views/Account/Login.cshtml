@model File_Sharing.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<br />


<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area">
                 
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>Login</h2>
                            </div>
                        </div>
                    </div>

                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form method="post" class="mu-contact-form" asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder="Email" id="Email" required>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-pencil-square-o mu-contact-icon"></span>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="Password" id="Password" required>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <button type="submit" class="mu-send-msg-btn"><span>Login</span></button>
                                    </form>
                                </div>
                                <hr>
                                <hr>
                                <div class="row">
                                    <div class="col-6">
                                        <a class="btn btn-outline-primary" asp-action="ExternalLogin" asp-route-provider="Facebook" asp-controller="Account">Login With Facebook</a>
                                    </div>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
